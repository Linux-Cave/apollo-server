  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/express-pino-logger": "^4.0.2",
    "@types/node": "^14.6.0",
    "@types/pino": "^6.3.3",
    "apollo-server-testing": "^2.18.2",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "prettier": "^2.1.2",
