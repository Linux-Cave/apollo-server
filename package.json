{
  "name": "@linuxcave/apollo-server",
  "version": "0.0.1",
  "description": "A Node.js boilerplate for Apollo Server.",
  "engines": {
    "node": "^14.0.0"
  },
  "repository": {
    "url": "https://github.com/LinuxCave/apollo-server"
  },
